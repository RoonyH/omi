html
  head
    link(rel='stylesheet', href='stylesheets/thirdparty/bootstrap.min.css')
    link(rel='stylesheet', href='stylesheets/style.css')
  body
    #game
      .row
         div(id='player-'+((playerId+1)%4+1) class="col-md-8 col-md-offset-2 player-holder text-center")
           player 1 goes here

      .row
         div(id='player-'+((playerId+2)%4+1) class="col-md-2 player-holder text-center")
           player 2 goes here

         div#table-1.col-md-8.text-center

         div(id='player-'+((playerId)%4+1) class="col-md-2 player-holder text-center")
           player 4 goes here

      .row
         div(id='player-'+playerId class="col-md-8 col-md-offset-2 local-player-holder text-center")
           player 3 goes here

    include game.html

    script(id="template-table" type="x-tmpl-mustache")
      |<lable>{{name}}</lable>
      #cards
        div(id='t-card-'+((playerId+2)%4+1) class="card table-card-1")
        div(id='t-card-'+((playerId+1)%4+1) class="card table-card-2")
        div(id='t-card-'+playerId class="card table-card-3")
        div(id='t-card-'+((playerId)%4+1) class="card table-card-4")

    script.
      var omiGameConf = !{JSON.stringify({gameId: gameId, playerId: playerId})}
